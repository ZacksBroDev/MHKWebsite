# MongoDB Configuration
# For local development
MONGODB_URI=mongodb://localhost:27017/mhk_karate
# For Docker production  
# MONGODB_URI=mongodb://admin:your-mongo-password@mongodb:27017/mhk_karate?authSource=admin

# MongoDB Root Password (for Docker)
MONGO_ROOT_PASSWORD=your-secure-mongo-password

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-change-this

# Admin Configuration
ADMIN_SECRET=your-admin-secret-change-this

# Server Configuration
PORT=3001
NODE_ENV=development
SMS_DEVELOPMENT_MODE=true

# Default Admin Access Code (used for first admin setup)
DEFAULT_ADMIN_CODE=your-admin-code
# Default Access Code
DEFAULT_ACCESS_CODE=your-access-code

# Email Configuration (for password reset emails)
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your-gmail-app-password

# SMS Configuration (Twilio)
# Add your SMS configuration here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,https://yourdomain.com
